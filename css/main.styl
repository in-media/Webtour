// COLORES
rojo = #DD1834
blanco = #FFF
verde = #000
negro = #000
gris = #9B9B9B


*
	webkit-transition: ease-out .3s;
	-moz-transition: ease-out .3s;
	-o-transition: ease-out .3s;
	transition: ease-out .3s;
	
a
	color negro
	text-decoration none

	
body
	font-size 16px
	font-family roboto
	height 100%

h1, h2, h5, p
	position relative
	margin 0

h2, h3, h4, h4
	font-family roboto		

h1
	color blanco
	font-family Anton, sans-serif
	font-size 5.1em
	text-transform uppercase
	padding 1em 0 0 0
	text-align right
	

h2
	color blanco
	font-size 1.5em
	font-weight: 300
	top -.7em
	text-align right

h4
	font-size 1.18em
	
h5
	background transparent
	font-size 1.05em	
	top -25px
	font-weight 300

footer
	background #C3152E
	padding 1.5em 0 .5em 0
	text-align center

p
	top -1em
	margin-bottom 1em
	font-size .86em
	

#andrea
	background url('../img/bg-logo.png') no-repeat , -o-linear-gradient(#949BA5 0%, #BEC3C9 100%) 
	background url('../img/bg-logo.png') no-repeat , -webkit-linear-gradient(#949BA5 0%, #BEC3C9 100%)
	background url('../img/bg-logo.png') no-repeat , linear-gradient(-180deg, #949BA5 0%, #BEC3C9 100%)
	background-position: 85% 56%
	height 608px
	position relative
	article
		float right
		width 55%
		h4, h5
			font-family helvetica, arial, sans-serif
		h4
			margin-top 8em
		p
			font-family helvetica, arial, sans-serif
			width 55%
			&:last-child
				margin-left 4em
		

	figure
		background verde
		float left
		margin 0
		position relative
		top 1.5em


#andres
	background-image -webkit-linear-gradient(#E41936 0%, #DD1834 53%, #C3152E 100%)
	background-image -o-linear-gradient(#E41936 0%, #DD1834 53%, #C3152E 100%)
	background-image linear-gradient(#E41936 0%, #DD1834 53%, #C3152E 100%)
	height 608px
	position relative
	article
		float right
		width 55%
		p
			width 50%	
	div
		.bajador
			left 1.5em
			position relative
			top 6em
	figure
		background verde
		float left
		margin-right 1em
		position relative


#willi
	background #E2E2E4
	height 628px
	aside
		position relative
		border-left
		ul
			list-style-type: none;
			margin 0
			padding 0 0 0 .6em
			border-left 2px solid gris

			li
				margin 0
				font-size 22px
				
				span
					color rojo
					font-family roboto
					font-size 22px
					font-weight 700
					text-transform uppercase
			.fecha
				color gris
				font-weight 300
				padding 0 0 .6em 1.2em
				margin-top -.4em
				font-size 16px
					

	article
		text-align right
		width 42%
		padding 3em 0
	figure
		float right
		margin-right 2em
		vertical-align bottom
		position relative
		background verde
		



.contenedor
	max-width 960px
	margin 0 auto
	position relative

.clear
	clear both